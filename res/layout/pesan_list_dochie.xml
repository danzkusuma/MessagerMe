<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swatch"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/linearBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="right"
            android:orientation="horizontal" 
            android:minWidth="90dp"
            >

            <ImageView
                android:id="@+id/shape1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/panjang2" />

            <LinearLayout
                android:id="@+id/txtshapebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="90dp"
                android:background="@drawable/shape2"
                android:orientation="vertical"
                android:padding="3dp" >

                <TextView
                    android:id="@+id/txtpesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/cek_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cek_red"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cek_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cek_green"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/shape2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/panjang1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>